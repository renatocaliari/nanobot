# Nanobot Configuration for Dokploy
# Copy this file to .env and fill in your values

# Port configuration
NANOBOT_PORT=18790

# LLM Provider API Keys
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Alternative LLM providers (optional)
ZAI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Web Search API Key (optional)
# Get your API key from: https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=

# Telegram Bot Configuration (optional)
# Create a bot at: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
# Get your user ID from: https://t.me/userinfobot
TELEGRAM_ALLOWED_USERS=123456789

# WhatsApp Configuration (optional)
WHATSAPP_ENABLED=false
# Phone numbers allowed to interact (format: +1234567890)
WHATSAPP_ALLOWED_NUMBERS=

# Advanced Configuration
# Default model to use (examples: anthropic/claude-opus-4-5, mini max/minimax-m2)
NANOBOT_DEFAULT_MODEL=zai/glm-4.7
